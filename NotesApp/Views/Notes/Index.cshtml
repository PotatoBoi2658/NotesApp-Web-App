@model IEnumerable<NotesApp.Models.Note>

@{
    if (User.IsInRole("Administrator"))
    { 
        ViewData["Title"] = "All Notes";
        <h1>All Notes</h1> 
    }
    else 
    {
        ViewData["Title"] = "My Notes";
        <h1>My Notes</h1>
    }
}

<p>
    <a asp-action="Create" class="btn btn-success">Create New Note</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            @if (User.IsInRole("Administrator"))
            {
                <th>User</th>
            }
            <th>Title</th>
            <th>Created</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (User.IsInRole("Administrator"))
                {
                    <td>@item.User?.UserName</td>
                }
                <td>@item.Title</td>
                <td>@item.CreatedAt.ToString("dd MMM yyyy")</td>
                <td>
                    @foreach (var nt in item.NoteTags)
                    {
                        <a asp-action="ByTag"
                           asp-route-tag="@nt.Tag.Name"
                           class="badge bg-secondary text-decoration-none me-1">
                            @nt.Tag.Name
                        </a>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>