@model NotesApp.Models.Note

@{
    ViewData["Title"] = "Note Details";
}

<h1>@Model.Title</h1>
<hr />

<p class="text-muted">
    Created on @Model.CreatedAt.ToString("dd MMM yyyy HH:mm")
</p>

<div class="mb-4">
    <p>@Model.Content</p>
</div>

@if (Model.NoteTags.Any())
{
    <div class="mb-3">
        <strong>Tags:</strong>
        @foreach (var nt in Model.NoteTags)
        {
            <a asp-action="ByTag"
               asp-route-tag="@nt.Tag.Name"
               class="badge bg-secondary text-decoration-none me-1">
                @nt.Tag.Name
            </a>
        }
    </div>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
